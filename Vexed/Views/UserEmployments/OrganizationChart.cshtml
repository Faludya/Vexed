@model DataModels.ViewModels.OrganizationChartViewModel;

<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <div class="card mb-3">
                <div class="card-header bg-primary" style="height: 5px;"></div>
                <div class="card-body">
                    <a asp-action="OrganizationChart" asp-route-userId="@Model.Superior.Details.UserId">
                        <h4>@Model.Superior.Details.FirstName @Model.Superior.Details.LastName</h4>
                    </a>
                    <p class="text-dark">
                        <i class='bx bx-star text-primary'></i>
                        @Model.Superior.Employment.Function</p>
                    <p >
                        @Model.Superior.Email
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row px-5">
        <div class="col-md-12">
            <hr style="border-right: 2px solid; height: 50px; display: inline-block; margin-top: 0; margin-bottom: 0;">
            <hr style="border-top: 2px solid; margin-top: 0; margin-bottom: 15px;">
        </div>
    </div>


    <div class="row justify-content-center">
        @foreach (var member in Model.TeamMembers)
        {
            <div class="col-md-4 text-center">
                <div class="card mb-3">
                    <div class="card-header bg-primary" style="height: 5px;"></div>
                    <div class="card-body">
                        <a asp-action="OrganizationChart" asp-route-userId="@member.Details.UserId">
                            <h4>@member.Details.FirstName @member.Details.LastName</h4>
                        </a>
                        <p class="text-dark">
                            <i class='bx bx-group text-primary'></i>
                            @member.Employment.Function
                        </p>
                        <p>
                            @member.Email
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
