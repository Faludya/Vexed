@using Vexed.Services;
@inject LanguageService language
@model Vexed.Models.ViewModels.EmploymentViewModel

@{
    ViewData["Title"] = "Create";
}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>@language.GetKey("Create")</h4>
            <span class="ml-1"> New user employment</span>
        </div>
    </div>
</div>

<body class="vh-10">
    <div class="container py-5 h-10">
        <div class="row d-flex justify-content-center align-items-center h-10">
            <div class="col-md-8 col-lg-8">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body text-center">
                        <h4>@language.GetKey("UserEmployment")</h4>
                        <hr />
                        <div class="text-left p-3 text-dark">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bx-user'></i>
                                        <b>@language.GetKey("UserName"):</b>
                                    </div>
                                    <div class="col-8"> 
                                        @Html.DropDownListFor(m => m.SelectedUserId, new SelectList(Model.UserNamesVM, "UserId", "UserName"), "Select User", new { @class = "form-control", @id = "single-select" })
                                        <input type="hidden" asp-for="SelectedUserId" />
                                        <input type="hidden" asp-for="UserNamesVM" />
                                        <input type="hidden" asp-for="AllRoles" />
                                    </div>
                                </div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bxs-school'></i>
                                        <b>@language.GetKey("CompanyName"):</b>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="UserEmployment.CompanyName" class="form-control" />
                                        <span asp-validation-for="UserEmployment.CompanyName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bxl-codepen'></i>
                                        <b>@language.GetKey("Department"):</b>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="UserEmployment.Department" class="form-control" />
                                        <span asp-validation-for="UserEmployment.Department" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bxl-codepen'></i>
                                        <b>@language.GetKey("Function"):</b>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="UserEmployment.Function" class="form-control" />
                                        <span asp-validation-for="UserEmployment.Function" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bx-purchase-tag-alt'></i>
                                        <b>@language.GetKey("Roles"):</b>
                                    </div>
                                    <div class="col-8">
                                        @Html.DropDownListFor(m => m.UserRoles, new MultiSelectList(Model.UserRoles), "Select Role", new { @class = "form-control", @id = "roles-dropdown", multiple = "multiple" })
                                    </div>
                                </div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bx-map'></i>
                                        <b>@language.GetKey("Location"):</b>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="UserEmployment.Location" class="form-control" />
                                        <span asp-validation-for="UserEmployment.Location" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bx-calendar-check'></i>
                                        <b>@language.GetKey("HireDate"):</b>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="UserEmployment.HireDate" class="form-control" />
                                        <span asp-validation-for="UserEmployment.HireDate" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bx-wallet-alt'></i>
                                        <b>@language.GetKey("HourlyPay"):</b>
                                    </div>
                                    <div class="input-group col-8">
                                        <div class="input-group">
                                            <input asp-for="UserEmployment.HourlyPay" class="form-control">
                                            <div class="input-group-append">
                                                <span class="input-group-text">$</span>
                                            </div>
                                        </div>                                        
                                        <span asp-validation-for="UserEmployment.HourlyPay" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bxs-face'></i>
                                        <b>@language.GetKey("SuperiorName"):</b>
                                    </div>
                                    <div class="col-8">
                                        @Html.DropDownListFor(m => m.SelectedSuperiorId, new SelectList(Model.SuperiorNamesVM, "UserId", "UserName"), "Select User", new { @class = "form-control", @id = "superior-dropdown" })
                                        <input type="hidden" asp-for="SelectedSuperiorId" />
                                        <input type="hidden" asp-for="UserEmployment.SuperiorName" id="superior-name" />
                                        <input type="hidden" asp-for="SuperiorNamesVM" />

                                    </div>
                                </div>

                                <div class="form-group row my-4">
                                    <div class="col-4 my-2">
                                        <a class="btn btn-outline-dark" asp-action="Index">@language.GetKey("BackToList")</a>
                                    </div>
                                    <div class="col-8">
                                        <input type="submit" value="@language.GetKey("Create")" class="btn btn-primary" />
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $('#single-select').select2({
            maximumSelectionLength: 10,
            placeholder: 'Select an option'
        });

        $('#superior-dropdown').select2({
            maximumSelectionLength: 10,
            placeholder: 'Select an option'
        });

        $('#roles-dropdown').select2({
            placeholder: 'Select an option',
            multiple: true
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var dropdown = document.getElementById("superior-dropdown");
        var nameInput = document.getElementById("superior-name");

        dropdown.addEventListener("change", function () {
            var selectedOption = this.options[this.selectedIndex];
            var name = selectedOption.text;
            nameInput.value = name;
        });
    </script>


}
