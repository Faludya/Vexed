@model Vexed.Models.LeaveRequest

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<h1>Details</h1>
<hr class="dotted" />

<body class="vh-10">
    <div class="container py-5 h-10">
        <div class="row d-flex justify-content-center align-items-center h-10">
            <div class="col-md-8 col-lg-8 col-xl-6">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Your Leave Requests</h3>
                        <hr />
                        <div class="container">
                            <div class="text-left">
                                <div class="row">
                                    <div class="col">
                                        <i class='bx bxs-category'></i>
                                        <b>Type</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Type)
                                    </div>
                                </div>

                                <hr class="dotted" />
                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-chevrons-right'></i>
                                        <b>Start Date</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.StartDate)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-chevrons-left'></i>
                                        <b>End Date</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.EndDate)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-bar-chart-alt-2'></i>
                                        <b>Quantity</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Quantity)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-stats'></i>
                                        <b>Status</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Status)
                                    </div>
                                </div>

                                <hr class="dotted" />
                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-comment'></i>
                                        <b>Comments</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Comments)
                                    </div>
                                </div>

                            </div>
                        </div>

                        <hr class="my-4">
                        <a class="btn btn-lg btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                        <a class="btn btn-lg btn-secondary" asp-action="Index">Back to List</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>