@model IEnumerable<Vexed.Models.LeaveRequest>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<body>
    <div class="login-form table-responsive">
        <form>
            @*            <div class="action">
            <button asp-action="Create">Create new Contact Info</button>
            </div>*@
            <p>Sample text</p>
            <div class="content"></div>
            <table class="table table-striped table-hover content">
                <thead class="table-dark">
                    <tr>
                        <th>
                            <i class='bx bxs-category'></i>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>
                            <i class='bx bx-chevrons-right'></i>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            <i class='bx bx-chevrons-left'></i>
                            @Html.DisplayNameFor(model => model.EndDate)
                        </th>
                        <th>
                            <i class='bx bx-bar-chart-alt-2' ></i>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th>
                            <i class='bx bx-stats'></i>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            <i class='bx bx-comment' ></i>
                            @Html.DisplayNameFor(model => model.Comments)
                        </th>
                        <th>
                            <a class="btn btn-outline-secondary text-white" asp-action="Create">New</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Comments)
                            </td>
                            <td>
                                <a class="text-dark" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                                    <i class='bx bx-dots-horizontal-rounded'></i>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item text-dark" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class='bx bxs-edit-alt'></i> Edit
                                        </a>
                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                            <i class='bx bxs-detail'></i> Details
                                        </a>
                                        <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class='bx bxs-trash'></i> Delete
                                        </a>
                                    </div>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</body>