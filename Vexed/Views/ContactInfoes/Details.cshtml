@using Vexed.Services;
@inject LanguageService language
@model Vexed.Models.ContactInfo

@{
    ViewData["Title"] = "Details";
}


<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<h1>@language.GetKey("Details")</h1>
<hr class="dotted" />

<body class="vh-10">
    <div class="container py-5 h-10">
        <div class="row d-flex justify-content-center align-items-center h-10">
            <div class="col-md-8 col-lg-8 col-xl-6">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">@language.GetKey("YourContact")</h3>
                        <hr />
                        <div class="container">
                            <div class="text-left">
                                <div class="row">
                                    <div class="col">
                                        <i class='bx bxs-category'></i>
                                        <b>@language.GetKey("Type")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Type)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bxs-book-content'></i>
                                        <b>@language.GetKey("Contact")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Contact)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">
                        <a class="btn btn-lg btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">@language.GetKey("Edit")</a>
                        <a class="btn btn-lg btn-secondary" asp-action="Index">@language.GetKey("BackToList")</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

