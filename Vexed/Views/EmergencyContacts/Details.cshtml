@using Vexed.Services;
@inject LanguageService language
@model DataModels.EmergencyContact

@{
    ViewData["Title"] = "Details";
}
<link href="/css/card.css" rel="stylesheet" />

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>@language.GetKey("Details")</h4>
            <span class="ml-1"> @language.GetKey("EmergencyContactDetails")</span>
        </div>
    </div>
</div>

<body class="vh-10">
    <div class="container py-5 h-10">
        <div class="row d-flex justify-content-center align-items-center h-10">
            <div class="col-md-8 col-lg-8">
                <div class="card testimonial-card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body text-center">
                        <div class="avatar-simple mx-auto mb-1 mt-2 white">
                            <img src="https://cdn-icons-png.flaticon.com/128/8140/8140392.png" class=" img-fluid" alt="woman avatar">
                        </div>

                        <h3 class="mb-5">@language.GetKey("YourEmergencyContact")</h3>
                        <hr />
                        <div class="container">
                            <div class="text-left text-dark">
                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-user'></i>
                                        <b>@language.GetKey("FirstName")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.FirstName)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-user'></i>
                                        <b>@language.GetKey("LastName")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.LastName)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-shape-circle'></i>
                                        <b>@language.GetKey("Relationship")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Relationship)
                                    </div>
                                </div>

                                <hr class="dotted" />
                                <div class="row">
                                    <div class="col">
                                        <i class='bx bxs-phone'></i>
                                        <b>@language.GetKey("Phone")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Phone)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-envelope'></i>
                                        <b>@language.GetKey("Email")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Email)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-home'></i>
                                        <b>@language.GetKey("Address")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Address)
                                    </div>
                                </div>

                                <hr class="dotted" />
                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-info-circle'></i>
                                        <b>@language.GetKey("AdditionalInfo")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.AdditionalInformation)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">
                        <a class="btn btn-lg btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">@language.GetKey("Edit")</a>
                        <a class="btn btn-lg btn-outline-dark" asp-action="Index">@language.GetKey("BackToList")</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

