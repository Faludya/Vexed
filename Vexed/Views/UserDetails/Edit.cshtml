@model Vexed.Models.UserDetails

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<body>
    <div class="login-form-small col-md-4 justify-content-center">
        <h4>User Deatils</h4>
        <hr />
        <div class="text-left p-3">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />

                <div class="form-group row my-3">
                    <div class="col-4 my-2">
                        <i class='bx bx-user'></i>
                        <b>First Name:</b>
                    </div>
                    <div class="col-8">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row my-3">
                    <div class="col-4 my-2">
                        <i class='bx bx-user'></i>
                        <b>Last Name:</b>
                    </div>
                    <div class="col-8">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row my-3">
                    <div class="col-4 my-2">
                        <i class='bx bx-user'></i>
                        <b>Preffered name:</b>
                    </div>
                    <div class="col-8">
                        <input asp-for="PrefferedLastName" class="form-control" />
                        <span asp-validation-for="PrefferedLastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row my-3">
                    <div class="col-4 my-2">
                        <i class='bx bx-male-female'></i>
                        <b>Gender:</b>
                    </div>
                    <div class="col-8">
                        <input asp-for="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row my-3">
                    <div class="col-4 my-2">
                        <i class='bx bx-calendar-event'></i>
                        <b>Date of birth:</b>
                    </div>
                    <div class="col-8">
                        <input asp-for="DateOfBirth" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row my-3">
                    <div class="col-4 my-2">
                        <i class='bx bx-group'></i>
                        <b>Nationality:</b>
                    </div>
                    <div class="col-8">
                        <input asp-for="Nationality" class="form-control" />
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row my-3">
                    <div class="col-4 my-2">
                        <i class='bx bx-globe'></i>
                        <b>Contry:</b>
                    </div>
                    <div class="col-8">
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row my-3">
                    <div class="col-4 my-2">
                        <i class='bx bxs-city'></i>
                        <b>City:</b>
                    </div>
                    <div class="col-8">
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row my-3">
                    <div class="col-4 my-2">
                        <i class='bx bx-home'></i>
                        <b>Address:</b>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row my-3">
                    <div class="col-4 my-2">
                        <i class='bx bx-info-circle'></i>
                        <b>Additional Info:</b>
                    </div>
                    <div class="col-8">
                        <input asp-for="AdditionalInformation" class="form-control" />
                        <span asp-validation-for="AdditionalInformation" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row my-4">
                    <div class="col-4 my-2">
                        <a asp-action="Index">Back to List</a>
                    </div>
                    <div class="col-8">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>

    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
