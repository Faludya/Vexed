@using Vexed.Services;
@inject LanguageService language
@model Vexed.Models.TimeCard

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<body class="vh-10">
    <div class="container py-5 h-10">
        <div class="row d-flex justify-content-center align-items-center h-10">
            <div class="col-md-8 col-lg-8 col-xl-6">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5 text-danger">@language.GetKey("Delete") @language.GetKey("TimeCard")?</h3>
                        <hr />
                        <div class="container">
                            <div class="text-left">
                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-barcode'></i>
                                        <b>@language.GetKey("ProjectCode")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.ProjectCode)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-detail'></i>
                                        <b>@language.GetKey("TaskDetails")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.TaskDetails)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-map'></i>
                                        <b>@language.GetKey("Location")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Location)
                                    </div>
                                </div>

                                <hr class="dotted" />
                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-chevrons-right'></i>
                                        <b>@language.GetKey("StartDate")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.StartDate)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-chevrons-left'></i>
                                        <b>@language.GetKey("EndDate")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.EndDate)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-bar-chart-alt-2'></i>
                                        <b>@language.GetKey("Quantity")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Quantity)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-stats'></i>
                                        <b>@language.GetKey("Status")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Status)
                                    </div>
                                </div>

                                <hr class="dotted" />
                                <div class="row">
                                    <div class="col">
                                        <i class='bx bx-comment'></i>
                                        <b>@language.GetKey("Comments")</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Comments)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">
                        <form asp-action="Delete">
                            <a asp-action="Index">@language.GetKey("BackToList")</a> |
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="@language.GetKey("Delete")" class="btn btn-danger" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>