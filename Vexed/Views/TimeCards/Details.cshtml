@model Vexed.Models.TimeCard

@{
    ViewData["Title"] = "Details";
}


<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<h1>Details</h1>
<hr class="dotted" />

<body class="vh-10">
    <div class="container py-5 h-10">
        <div class="row d-flex justify-content-center align-items-center h-10">
            <div class="col-md-8 col-lg-8 col-xl-6">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Your Time Cards</h3>
                        <hr />
                        <div class="container">
                            <div class="text-left">
                                <div class="row">
                                    <div class="col">
                                        <b>Project Code</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.ProjectCode)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <b>Task details</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.TaskDetails)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <b>Location</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Location)
                                    </div>
                                </div>

                                <hr class="dotted" />
                                <div class="row">
                                    <div class="col">
                                        <b>Start Date</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.StartDate)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <b>End date</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.EndDate)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <b>Quantity</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Quantity)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <b>Status</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Status)
                                    </div>
                                </div>

                                <hr class="dotted" />
                                <div class="row">
                                    <div class="col">
                                        <b>Comments</b>
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(model => model.Comments)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">
                        <a class="btn btn-lg btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                        <a class="btn btn-lg btn-secondary" asp-action="Index">Back to List</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
