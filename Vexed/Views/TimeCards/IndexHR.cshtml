@model IEnumerable<Vexed.Models.TimeCard>

@{
    ViewData["Title"] = "Index";
}

<h1>Approve Time Cards</h1>


<table class="table table-striped">
    <form method="post">
    <thead>
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.ProjectCode)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.TaskDetails)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                        @Html.DisplayFor(modelItem => item.ProjectCode)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.TaskDetails)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    <button class="btn btn-primary" type="submit" asp-action="IndexHR" asp-controller="TimeCards" asp-route-cardAction="Approved" asp-route-id="@item.Id">Approve</button> |
                    <button class="btn btn-danger" type="submit" asp-action="IndexHR" asp-controller="TimeCards" asp-route-cardAction="Cancelled" asp-route-id="@item.Id">Cancel</button> |
                </td>
            </tr>
            }
        </form>
    </tbody>
</table>
