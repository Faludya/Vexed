@using Vexed.Services;
@inject LanguageService language
@model DataModels.Qualification

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="/vendor/select2/css/select2.min.css">

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>@language.GetKey("Edit")</h4>
            <span class="ml-1">@language.GetKey("Edit") @language.GetKey("Qualification") </span>
        </div>
    </div>

    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <a class="btn btn-rounded btn-danger" asp-action="Delete" asp-route-id="@Model.Id">
            <span class="btn-icon-left text-dark">
                <i class="fa fa-close color-primary"></i>
            </span>@language.GetKey("Delete")
        </a>
    </div>
</div>

<body class="vh-10">
    <div class="container py-5 h-10">
        <div class="row d-flex justify-content-center align-items-center h-10">
            <div class="col-md-8 col-lg-8">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body text-center">
                        <h4>@language.GetKey("Qualification")</h4>
                        <hr />
                        <div class="text-left p-3 text-dark">
                            <form asp-action="Edit" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="UserId" />
                                <input type="hidden" asp-for="AttachmentUrl" />

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bx-certification'></i>
                                        <b>@language.GetKey("Title"):</b>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="Title" class="form-control" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bxs-edit-alt'></i>
                                        <b>@language.GetKey("Description"):</b>
                                    </div>
                                    <div class="col-8">
                                        <textarea asp-for="Description" class="form-control" rows="3" style="resize: vertical;"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bx-calendar-check'></i>
                                        <b>@language.GetKey("DateObtained"):</b>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="DateObtained" class="form-control" />
                                        <span asp-validation-for="DateObtained" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bx-calendar-x'></i>
                                        <b>@language.GetKey("ExpiryDate"):</b>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="ExpiryDate" class="form-control" />
                                        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row my-3">
                                    <div class="col-4 my-2">
                                        <i class='bx bx-file'></i>
                                        <b>@language.GetKey("Attachment"):</b>
                                    </div>
                                    <div class="col-8">
                                        <input type="file" class="form-control-file" name="attachmentFile" accept="image/*,.pdf" />
                                        <span asp-validation-for="AttachmentUrl" class="text-danger"></span>
                                        <a href=" @Model.AttachmentUrl" target="_blank">
                                            @language.GetKey("ViewQualificationDoc")
                                        </a>

                                    </div>
                                </div>

                                <div class="form-group row my-4">
                                    <div class="col-4">
                                        <a class="btn btn-outline-dark" asp-action="Index">@language.GetKey("BackToList")</a>
                                    </div>
                                    <div class="col-8">
                                        <input type="submit" value="@language.GetKey("Save")" class="btn btn-primary" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

@section Scripts {
    <script src="/vendor/select2/js/select2.full.min.js"></script>
    <script src="/js/plugins-init/select2-init.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
